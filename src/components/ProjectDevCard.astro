---
// Componente para proyectos de Web Developer - Estilo Card con Tags
interface Props {
  title: string;
  description: string;
  link: string;
  tags: string[];
}

const { title, description, link, tags } = Astro.props;
---

<div class="project-card">
  <div class="project-card__content">
    <h3 class="project-card__title">{title}</h3>
    <p class="project-card__description">{description}</p>
  </div>
  <div class="project-card__footer">
    <div class="project-card__tags">
      {tags.map(tag => <span class="project-card__tag">{tag}</span>)}
    </div>
    <a 
      href={link} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="project-card__link"
    >
      Ver Proyecto 
      <svg class="project-card__icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M7 17L17 7M17 7H7M17 7V17"/>
      </svg>
    </a>
  </div>
</div>

<style>
  :root {
    --card-bg: #ffffff;
    --card-bg-hover: #f8f9fa;
    --text-primary: #1a202c;
    --text-secondary: #718096;
    --accent-color: #0062b9;
    --tag-bg: rgba(0, 98, 185, 0.08);
    --tag-text: #0062b9;
    --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .project-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    background-color: var(--card-bg);
    border-radius: 12px;
    padding: 2rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid rgba(0, 0, 0, 0.06);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover {
    transform: translateY(-6px);
    box-shadow: var(--shadow-md);
    background-color: var(--card-bg-hover);
  }

  /* --- Contenido --- */
  .project-card__content {
    margin-bottom: 1.5rem;
  }

  .project-card__title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  .project-card__description {
    font-size: 1rem;
    color: var(--text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* --- Footer --- */
  .project-card__footer {
    margin-top: auto;
  }

  .project-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .project-card__tag {
    background-color: var(--tag-bg);
    color: var(--tag-text);
    padding: 0.35rem 0.85rem;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }

  .project-card__tag:hover {
    background-color: var(--accent-color);
    color: #fff;
    transform: translateY(-2px);
  }

  .project-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s ease;
    padding: 0.5rem 0;
  }

  .project-card__link:hover {
    gap: 0.75rem;
    color: #004a8f;
  }

  .project-card__link:focus {
    outline: 2px solid var(--accent-color);
    outline-offset: 4px;
    border-radius: 4px;
  }

  .project-card__icon {
    transition: transform 0.2s ease;
  }

  .project-card__link:hover .project-card__icon {
    transform: translate(3px, -3px);
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .project-card {
      padding: 1.5rem;
    }

    .project-card__title {
      font-size: 1.25rem;
    }

    .project-card__description {
      font-size: 0.95rem;
    }
  }
</style>
