---
// Componente para proyectos de Data Analyst - Estilo Galer√≠a con Hover Overlay
interface Props {
  title: string;
  description: string;
  image: string;
  tableauUrl: string;
}

const { title, description, image, tableauUrl } = Astro.props;
---

<a 
  href={tableauUrl} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="gallery-card"
>
  <div class="gallery-card__image-container">
    <img 
      src={image} 
      alt={title}
      class="gallery-card__image"
      loading="lazy"
    />
    <div class="gallery-card__overlay">
      <div class="gallery-card__content">
        <h3 class="gallery-card__title">{title}</h3>
        <p class="gallery-card__description">{description}</p>
      </div>
    </div>
  </div>
</a>

<style>
  .gallery-card {
    display: block;
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    aspect-ratio: 4 / 3;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .gallery-card:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
  }

  .gallery-card__image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .gallery-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .gallery-card:hover .gallery-card__image {
    transform: scale(1.1);
  }

  .gallery-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.85) 0%,
      rgba(0, 0, 0, 0.6) 50%,
      rgba(0, 0, 0, 0.3) 100%
    );
    backdrop-filter: blur(2px);
    display: flex;
    align-items: flex-end;
    padding: 2rem;
    opacity: 0;
    transition: opacity 0.4s ease, backdrop-filter 0.4s ease;
  }

  .gallery-card:hover .gallery-card__overlay {
    opacity: 1;
    backdrop-filter: blur(4px);
  }

  .gallery-card__content {
    transform: translateY(20px);
    transition: transform 0.4s ease;
  }

  .gallery-card:hover .gallery-card__content {
    transform: translateY(0);
  }

  .gallery-card__title {
    color: #fff;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }

  .gallery-card__description {
    color: rgba(255, 255, 255, 0.95);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.3);
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .gallery-card__title {
      font-size: 1.25rem;
    }

    .gallery-card__description {
      font-size: 0.875rem;
    }

    .gallery-card__overlay {
      padding: 1.5rem;
    }
  }
</style>
