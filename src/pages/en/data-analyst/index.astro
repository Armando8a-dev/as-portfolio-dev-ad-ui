---
import Layout from "../../../layouts/Layout.astro";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import ProjectGalleryCard from "../../../components/ProjectGalleryCard.astro";
import SkillIcon from "../../../components/SkillIcon.astro";
import { useTranslations } from "../../../i18n/translations";

const t = useTranslations('en');
---

<Layout
  title="Armando Ochoa - Data Analyst"
  description="Data Analyst Portfolio - Armando Ochoa"
  favicon="ðŸ“Š"
>
  <Header currentPath="/en/data-analyst" />

  <section class="home-hero">
    <div class="home-hero__content">
      <h1 class="heading-primary">{t('da.hero.greeting')}</h1>
      <div class="home-hero__info">
        <p class="text-primary">
          {t('da.hero.description')}
        </p>
      </div>
    </div>

    <div class="home-hero__mouse-scroll-cont">
      <div class="mouse"></div>
    </div>
  </section>

  <section id="about" class="about sec-pad">
    <div class="main-container">
      <h2 class="heading heading-sec heading-sec__mb-med">
        <span class="heading-sec__main">{t('about.title')}</span>
        <span class="heading-sec__sub">
          {t('about.subtitle')}
        </span>
      </h2>
      <div class="about__content">
        <div class="about__content-main">
          <h3 class="about__content-title">{t('about.get-to-know')}</h3>
          <div class="about__content-details">
            <p class="about__content-details-para" set:html={t('da.about.p1')}></p>
            <br />
            <p class="about__content-details-para">{t('da.about.p2')}</p>
            <br />
            <p class="about__content-details-para">{t('da.about.p3')}</p>
          </div>
          <a href="./#contact" class="btn btn--med btn--theme dynamicBgClr">
            {t('about.cta')}
          </a>
        </div>
        <div class="about__content-skills">
          <h3 class="about__content-title">{t('about.skills')}</h3>
          <div class="skills-grid">
            <SkillIcon name="Python" icon="simple-icons:python" />
            <SkillIcon name="Pandas" icon="simple-icons:pandas" />
            <SkillIcon name="NumPy" icon="simple-icons:numpy" />
            <SkillIcon name="Tableau" icon="simple-icons:tableau" />
            <SkillIcon name="Power BI" icon="simple-icons:powerbi" />
            <SkillIcon name="PostgreSQL" icon="simple-icons:postgresql" />
            <SkillIcon name="MySQL" icon="simple-icons:mysql" />
            <SkillIcon name="Excel" icon="simple-icons:microsoftexcel" />
            <SkillIcon name="Jupyter" icon="simple-icons:jupyter" />
            <SkillIcon
              name="Google Analytics"
              icon="simple-icons:googleanalytics"
            />
            <SkillIcon name="R" icon="simple-icons:r" />
            <SkillIcon name="Plotly" icon="simple-icons:plotly" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="projects" class="projects sec-pad">
    <div class="main-container">
      <h2 class="heading heading-sec heading-sec__mb-bg">
        <span class="heading-sec__main">{t('projects.da.title')}</span>
        <span class="heading-sec__sub">
          {t('projects.da.subtitle')}
        </span>
      </h2>

      <div class="projects-gallery">
        <ProjectGalleryCard
          title={t('da.project1.title')}
          description={t('da.project1.description')}
          image="/assets/jpeg/project-mockup-example.jpeg"
          tableauUrl="https://public.tableau.com/views/YourProject1"
        />

        <ProjectGalleryCard
          title={t('da.project2.title')}
          description={t('da.project2.description')}
          image="/assets/jpeg/project-mockup-example.jpeg"
          tableauUrl="https://public.tableau.com/views/YourProject2"
        />

        <ProjectGalleryCard
          title={t('da.project3.title')}
          description={t('da.project3.description')}
          image="/assets/jpeg/project-mockup-example.jpeg"
          tableauUrl="https://public.tableau.com/views/YourProject3"
        />
        
      </div>
    </div>
  </section>

  <section id="approach" class="approach sec-pad">
    <div class="main-container">
      <h2 class="heading heading-sec heading-sec__mb-bg">
        <span class="heading-sec__main">My Analytical Approach</span>
        <span class="heading-sec__sub">
          The fundamental pillars that guide my work as a Data Analyst
        </span>
      </h2>

      <div class="approach-grid">
        <div class="approach-card">
          <div class="approach-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 3v18h18"/>
              <path d="m19 9-5 5-4-4-3 3"/>
            </svg>
          </div>
          <h3 class="approach-card__title">Data Manipulation & Analysis</h3>
          <p class="approach-card__description">
            I specialize in preparing, cleaning, and transforming datasets to obtain reliable and useful information. 
            I have worked with Python (Pandas, NumPy) and SQL to identify patterns, debug inconsistencies, and generate metrics that facilitate decision-making. 
            I seek to continue improving in the design of more automated and efficient pipelines.
          </p>
        </div>

        <div class="approach-card">
          <div class="approach-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="18" height="18" x="3" y="3" rx="2"/>
              <path d="M7 7h10"/>
              <path d="M7 12h10"/>
              <path d="M7 17h10"/>
            </svg>
          </div>
          <h3 class="approach-card__title">Data Visualization</h3>
          <p class="approach-card__description">
            I enjoy turning data into visual stories that convey value in a clear and attractive way. 
            I use tools like Tableau to create dashboards focused on business understanding and communication with non-technical teams. 
            I continue to strengthen my visual judgment and ability to choose the most effective visualizations based on context.
          </p>
        </div>

        <div class="approach-card">
          <div class="approach-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M12 8V4H8"/>
              <rect width="16" height="12" x="4" y="8" rx="2"/>
              <path d="M2 14h2"/>
              <path d="M20 14h2"/>
              <path d="M15 13v2"/>
              <path d="M9 13v2"/>
            </svg>
          </div>
          <h3 class="approach-card__title">Machine Learning</h3>
          <p class="approach-card__description">
            I am developing my skills in predictive models and user segmentation with Python (Scikit-learn). 
            I have implemented supervised and unsupervised algorithms in learning projects, analyzing results and interpreting their impact on real decisions. 
            My goal is to deepen in model evaluation and hyperparameter optimization for concrete business cases.
          </p>
        </div>
      </div>
    </div>
  </section>

  <section id="contact" class="contact sec-pad dynamicBg">
    <div class="main-container">
      <h2 class="heading heading-sec heading-sec__mb-med">
        <span class="heading-sec__main heading-sec__main--lt">{t('contact.title')}</span>
        <span class="heading-sec__sub heading-sec__sub--lt">
          {t('contact.subtitle')}
        </span>
      </h2>
      <div class="contact__form-container">
        <form
          action="https://formspree.io/f/mblzlndn"
          method="POST"
          class="contact__form"
        >
          <div class="contact__form-field">
            <label class="contact__form-label" for="name">{t('contact.name')}</label>
            <input
              required
              placeholder={t('contact.name.placeholder')}
              type="text"
              class="contact__form-input"
              name="name"
              id="name"
            />
          </div>
          <div class="contact__form-field">
            <label class="contact__form-label" for="email">{t('contact.email')}</label>
            <input
              required
              placeholder={t('contact.email.placeholder')}
              type="text"
              class="contact__form-input"
              name="email"
              id="email"
            />
          </div>
          <div class="contact__form-field">
            <label class="contact__form-label" for="message">{t('contact.message')}</label>
            <textarea
              required
              cols="30"
              rows="10"
              class="contact__form-input"
              placeholder={t('contact.message.placeholder')}
              name="message"
              id="message"></textarea>
          </div>
          <button type="submit" class="btn btn--theme contact__btn">
            {t('contact.submit')}
          </button>
        </form>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<style>
  .projects-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
  }

  @media (min-width: 640px) {
    .projects-gallery {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-gallery {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  /* Approach Section Styles */
  .approach {
    background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);
  }

  .approach-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2.5rem;
    margin-top: 4rem;
  }

  @media (min-width: 768px) {
    .approach-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .approach-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  .approach-card {
    background: white;
    border-radius: 12px;
    padding: 3rem 2.5rem;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;
  }

  .approach-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 35px rgba(0, 98, 185, 0.15);
  }

  .approach-card__icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #0062b9 0%, #0052a3 100%);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2rem;
    transition: all 0.3s ease;
  }

  .approach-card:hover .approach-card__icon {
    transform: scale(1.1) rotate(5deg);
  }

  .approach-card__icon svg {
    color: white;
    width: 40px;
    height: 40px;
  }

  .approach-card__title {
    font-size: 2rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 1.5rem;
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    .approach-card__title {
      font-size: 1.8rem;
    }
  }

  .approach-card__description {
    font-size: 1.6rem;
    color: #666;
    line-height: 1.7;
    text-align: center;
  }

  @media (max-width: 768px) {
    .approach-card__description {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .approach-card {
      padding: 2.5rem 2rem;
    }

    .approach-card__icon {
      width: 70px;
      height: 70px;
    }

    .approach-card__icon svg {
      width: 35px;
      height: 35px;
    }
  }
</style>
